<article class="snippet">
  <img src="{{ post.data.image }}" alt="" />
  <div class="info">
    <h2>{{ post.data.title }}</h2>
    <date class="font-extra">{{ post.data.date | postDate }}</date>
    <p>{{ post.data.description }}</p>
    <a href="{{ post.url }}" class="btn">Read More</a>
  </div>
</article>
